<Project TreatAsLocalProperty="Asm">

  <!-- Solution bootstrapping for code generation -->
  <PropertyGroup Condition=" '$(HagarCodeGen)' == 'true' ">
    <DotNetHost Condition="'$(DotNetHost)' == ''">dotnet</DotNetHost>
    <HagarCodeGenCoreAssembly>$(MSBuildThisFileDirectory)src/Hagar.CodeGenerator.MSBuild.Bootstrap/bin/publish/$(Configuration)/netcoreapp2.2/Hagar.CodeGenerator.MSBuild.Bootstrap.dll</HagarCodeGenCoreAssembly>
    <HagarCodeGenTaskAssembly>$(MSBuildThisFileDirectory)src/Hagar.CodeGenerator.MSBuild.Bootstrap/bin/publish/$(Configuration)/netcoreapp2.2/Hagar.CodeGenerator.MSBuild.Tasks.dll</HagarCodeGenTaskAssembly>
  </PropertyGroup>

  <ItemGroup Condition=" '$(HagarCodeGen)' == 'true' ">
    <ProjectReference Include="$(MSBuildThisFileDirectory)src/Hagar.CodeGenerator.MSBuild.Bootstrap/Hagar.CodeGenerator.MSBuild.Bootstrap.csproj" Condition=" '$(HagarCodeGen)' == 'true' ">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <AssetTargetFallback>netcoreapp2.2</AssetTargetFallback>
      <SkipGetTargetFrameworkProperties>true</SkipGetTargetFrameworkProperties>
      <UndefineProperties>TargetFramework</UndefineProperties>
    </ProjectReference>
  </ItemGroup>

  <Import Condition=" '$(HagarCodeGen)' == 'true' " Project="$(MSBuildThisFileDirectory)src/Hagar.CodeGenerator.MSBuild/build/Hagar.CodeGenerator.MSBuild.targets" />
  <!-- End -->

</Project>

